{
  "manifest_version": 3,
  "name": "X.com Floating Button",
  "version": "1.0",
  "description": "Adds a floating button to X.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["chart.min.js", "content.js"], 
      "css": ["styles.css"]
    }
  ],
  "permissions": []
}
